<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @GymStudioOS.Constants.AppConstants.APP_NAME</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/GymStudioOS.styles.css" asp-append-version="true" />
</head>

<body>
    <!-- Sidebar Layout -->
    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var showSidebar = controller != "Home" && controller != "Account";
    }
    <div class="sidebar-wrapper">
        @if (showSidebar)
        {
            @await Html.PartialAsync("_Sidebar")
        }
        <!-- Main Content Area -->
        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>